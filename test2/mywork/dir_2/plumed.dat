avg_meanforces: AVERAGE ARG=path_stat.sss,path_stat.zzz,meanforce_s,meanforce_z STRIDE=50 USE_ALL_DATA
avg_derivatives: AVERAGE ARG=(path_stat\.sss_refder_.+|path_stat\.zzz_refder_.+) STRIDE=50 USE_ALL_DATA
PRINT ARG=(avg_derivatives\..+) STRIDE=500 FILE=average_derivatives FMT=%12.8e
PRINT ARG=(avg_meanforces\..+) STRIDE=500 FILE=average_meanforces FMT=%12.8e
